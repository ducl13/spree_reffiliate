<% if false %>
<br>
<dt>Referral URL</dt>
<dd class='col-md-6 row'>
  <div class="input-group">
    <input type='text' data-coupon-code=true value='<%= referral_url(@user.referral.code) %>' class='form-control' />
    <span class="input-group-btn">
      <button class="btn btn-primary" data-copy-coupon-code=true type="button" title='Copy to clipboard'><span class='glyphicon glyphicon-copy'></span></button>
    </span>
  </div>
</dd>
<br><br><br>

<div>
  <dt>Referred Users</dt>
  <dd><%= @user.referred_count%></dd>
  <dd><%= link_to Spree.t(:details, scope: :referral), account_referral_details_path %>
</div>
<br><br>
<% end %>

<% if @user.associated_partner.present? %>
  <dt>Affiliate URL</dt>
  <dd class='col-md-6 row'>
    <div class="input-group">
      <input type='text' data-coupon-code=true value='<%= @user.associated_partner.redirect_path.present? ? redirect_affiliate_url(@user.associated_partner.redirect_path, @user.associated_partner.path) : affiliate_url(@user.associated_partner.path) %>' class='form-control' readonly />
      <span class="input-group-btn">
        <button class="btn btn-primary" data-copy-coupon-code=true type="button" title='Copy to clipboard'><span class='glyphicon glyphicon-copy'></span></button>
      </span>
    </div>
  </dd>
  <br><br><br>
  <div>
    <dt>Affiliate Order Count</dt>
    <dd><%= @user.associated_partner.transactions.count %></dd>
  </div>
  <br/>
<% end %>
